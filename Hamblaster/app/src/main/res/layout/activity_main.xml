<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mix Batter"
        android:id="@+id/btnMixBatter"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="118dp"
        android:background="#fff0d1bc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put in oven"
        android:id="@+id/btnPutInOven"
        android:layout_below="@+id/btnMixBatter"
        android:layout_alignStart="@+id/btnMixBatter"
        android:background="#ff684d4d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eat Cake"
        android:id="@+id/btnEatCake"
        android:layout_below="@+id/btnPutInOven"
        android:layout_alignStart="@+id/btnPutInOven"
        android:background="#ffffc5c4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cake!"
        android:id="@+id/textViewCake"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffff6caa"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewShowLine"
        android:layout_below="@+id/btnEatCake"
        android:layout_alignStart="@+id/btnEatCake"
        android:layout_marginTop="78dp" />

</RelativeLayout>
